[alias]

# classic

co = checkout
br = branch
ci = commit
st = status
unstage = reset @ --
last = log -1 @
hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
type = cat-file -t
dump = cat-file -p
echo = !echo

# custom

ad = add
cl = clone
di = diff
in = init
me = merge
re = remote
un = reset @ --

#

sl   = stash list
ss   = stash show
sp   = stash push
pp   = stash pop
sa   = stash apply
sc   = stash create
sd   = stash drop
pop  = stash pop
drop = stash drop
list = stash list

l    = log -4
ll   = log -8
li   = log --graph --oneline
tr   = log --graph
line = log --oneline

all = add --all
cam = commit --allow-empty --allow-empty-message -m '' --amend
com = commit --allow-empty --allow-empty-message -m ''

cce = config user.email roshal@users.noreply.github.com
ccn = config user.name  roshal

mes = merge --squash

rev = remote -v
rrc = rm -r --cached .

hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
dump = cat-file -p
type = cat-file -t

pgh = push github HEAD
phh = push heroku HEAD
poh = push origin HEAD

pgv = push github HEAD --no-verify
phv = push heroku HEAD --no-verify
pov = push origin HEAD --no-verify

rag = remote add github
rah = remote add heroku
rao = remote add origin

rrg = remote remove github
rrh = remote remove heroku
rro = remote remove origin
