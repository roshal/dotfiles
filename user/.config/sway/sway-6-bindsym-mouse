
bindsym --whole-window $-modifier+$-mouse-u workspace prev_on_output
bindsym --whole-window $-modifier+$-mouse-d workspace next_on_output

bindsym --whole-window --exclude-titlebar $-modifier+$-mouse-u+shift focus $-way-l
bindsym --whole-window --exclude-titlebar $-modifier+$-mouse-d+shift focus $-way-r

bindsym --whole-window --exclude-titlebar $-modifier+$-mouse-e focus $-way-l
bindsym --whole-window --exclude-titlebar $-modifier+$-mouse-s focus $-way-r
