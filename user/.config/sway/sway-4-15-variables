# set $-mouse-s BTN_SIDE
# set $-mouse-e BTN_EXTRA

set $-mouse-s button8
set $-mouse-e button9

# set $-mouse-t BTN_TASK
# set $-mouse-j BTN_JOYSTICK

### outputs

set $-output-0 DP-1
set $-output-1 HDMI-A-1
set $-output-2 HDMI-A-2

### paths

set $-path-mako-pulsemixer /-/mako/pulsemixer

### pulsemixer

set $-pulsemixer-volume pulsemixer --get-volume | jq -s add/length

### step

set $-step-0    0
set $-step-a    1
set $-step-b    4
set $-step-c   16
set $-step-d   64
set $-step-e  256
set $-step-f 1024

### wob

set $-wob-base wob -t1000 -W400 -H8 -o0 -b0 -p0 -abottom -M-16

### workspaces

set $-workspace-0 '0:0       '
set $-workspace-1 '1:1       '
set $-workspace-2 '2:2       '
set $-workspace-3 '3:3       '
set $-workspace-4 '4:4       '
set $-workspace-5 '5:5       '
set $-workspace-6 '6:6       '
set $-workspace-7 '7:7       '
set $-workspace-8 '8:8       '
set $-workspace-9 '9:9       '

set $-workspace-escape '10:        '
