
# # # https://i3wm.org/docs/userguide.html#list_of_commands

# # cat /usr/include/xkbcommon/xkbcommon-keysyms.h

bindsym --to-code $-key+q       kill
bindsym --to-code $-key+q+shift kill

##### 6.1 executing applications
# # # https://i3wm.org/docs/userguide.html#exec

bindsym $-key+$-special-p       exec $-action slurp--grim-path
bindsym $-key+$-special-p+ctrl  exec $-action swaymsg--node--grim-path
bindsym $-key+$-special-p+shift exec $-action grim--output-path

bindsym $-key+$-special-s exec $-action slurp--notify

bindsym $-key+return exec termite

bindsym $-special-p       exec $-action slurp--grim--wl-copy
bindsym $-special-p+ctrl  exec $-action swaymsg--node--grim--wl-copy
bindsym $-special-p+shift exec $-action grim--output--wl-copy

bindsym --to-code $-key+d exec wofi
bindsym --to-code $-key+l exec swaylock --image /-/pictures/waves.jpg
bindsym --to-code $-key+n exec thunar
bindsym --to-code $-key+o exec $-action swaymsg--switch-output

bindsym --to-code $-key+i       exec $-action nm-applet--restart
bindsym --to-code $-key+i+shift exec $-action nm-applet--killall

bindsym --to-code $-key+shift+d exec wofi --show drun --allow-images --sort-order alphabetical --search --

##### 6.2 splitting containers
# # # https://i3wm.org/docs/userguide.html#_splitting_containers

bindsym --to-code $-key+shift+e split toggle

bindsym --to-code $-key+shift+h split horizontal
bindsym --to-code $-key+shift+v split vertical

##### 6.3 manipulating layout
# # # https://i3wm.org/docs/userguide.html#manipulating_layout

### does incomprehensibly
# bindsym --to-code $-key+d layout default

bindsym --to-code $-key+e layout toggle

bindsym --to-code $-key+s layout stacking
bindsym --to-code $-key+t layout tabbed

bindsym --to-code $-key+f fullscreen

bindsym --to-code $-key+f+shift floating toggle

bindsym --to-code $-key+h splith
bindsym --to-code $-key+v splitv

##### 6.4 focusing containers
# # # https://i3wm.org/docs/userguide.html#_focusing_moving_containers

bindsym $-key+$-arrow-u focus $-arrow-u
bindsym $-key+$-arrow-l focus $-arrow-l
bindsym $-key+$-arrow-r focus $-arrow-r
bindsym $-key+$-arrow-d focus $-arrow-d

bindsym $-key+space focus mode_toggle

bindsym --to-code $-key+a focus parent
bindsym --to-code $-key+c focus child

##### 6.5 moving containers
# # # https://i3wm.org/docs/userguide.html#_moving_containers

bindsym $-key+$-arrow-u+shift move $-arrow-u $-step-b
bindsym $-key+$-arrow-l+shift move $-arrow-l $-step-b
bindsym $-key+$-arrow-r+shift move $-arrow-r $-step-b
bindsym $-key+$-arrow-d+shift move $-arrow-d $-step-b

bindsym --to-code $-key+mod1+a move absolute position center
bindsym --to-code $-key+mod1+c move position center
bindsym --to-code $-key+mod1+m move position mouse

##### 6.6 swapping containers
# # # https://i3wm.org/docs/userguide.html#_swapping_containers

##### 6.7 sticky floating windows
# # # https://i3wm.org/docs/userguide.html#_sticky_floating_windows

bindsym --to-code $-key+shift+s sticky toggle

##### 6.8 changing workspaces or moving to workspaces
# # # https://i3wm.org/docs/userguide.html#_changing_named_workspaces_moving_to_workspaces

bindsym $-key+$-arrow-u+mod1 move workspace to output $-arrow-u
bindsym $-key+$-arrow-l+mod1 move workspace to output $-arrow-l
bindsym $-key+$-arrow-r+mod1 move workspace to output $-arrow-r
bindsym $-key+$-arrow-d+mod1 move workspace to output $-arrow-d

bindsym $-key+$-arrow-u+ctrl workspace prev_on_output
bindsym $-key+$-arrow-d+ctrl workspace next_on_output

bindsym $-key+$-arrow-l+ctrl workspace prev
bindsym $-key+$-arrow-r+ctrl workspace next

bindsym $-key+$-control-i workspace $-workspace-6
bindsym $-key+$-control-h workspace $-workspace-7
bindsym $-key+$-control-d workspace $-workspace-8
bindsym $-key+$-control-e workspace $-workspace-9

bindsym $-key+$-control-i+shift move to workspace $-workspace-6
bindsym $-key+$-control-h+shift move to workspace $-workspace-7
bindsym $-key+$-control-d+shift move to workspace $-workspace-8
bindsym $-key+$-control-e+shift move to workspace $-workspace-9

bindsym $-key+$-control-p workspace prev_on_output
bindsym $-key+$-control-n workspace next_on_output

bindsym $-key+$-control-p+shift move to workspace prev_on_output
bindsym $-key+$-control-n+shift move to workspace next_on_output

bindsym $-key+escape workspace --no-auto-back-and-forth $-workspace-escape

bindsym $-key+escape+shift move to workspace $-workspace-escape

bindsym $-key+tab workspace back_and_forth

bindsym $-key+tab+shift move to workspace back_and_forth

bindsym --to-code $-key+$-key-0 workspace $-workspace-0
bindsym --to-code $-key+$-key-1 workspace $-workspace-1
bindsym --to-code $-key+$-key-2 workspace $-workspace-2
bindsym --to-code $-key+$-key-3 workspace $-workspace-3
bindsym --to-code $-key+$-key-4 workspace $-workspace-4
bindsym --to-code $-key+$-key-5 workspace $-workspace-5
bindsym --to-code $-key+$-key-6 workspace $-workspace-6
bindsym --to-code $-key+$-key-7 workspace $-workspace-7
bindsym --to-code $-key+$-key-8 workspace $-workspace-8
bindsym --to-code $-key+$-key-9 workspace $-workspace-9

bindsym --to-code $-key+$-key-0+shift move to workspace $-workspace-0
bindsym --to-code $-key+$-key-1+shift move to workspace $-workspace-1
bindsym --to-code $-key+$-key-2+shift move to workspace $-workspace-2
bindsym --to-code $-key+$-key-3+shift move to workspace $-workspace-3
bindsym --to-code $-key+$-key-4+shift move to workspace $-workspace-4
bindsym --to-code $-key+$-key-5+shift move to workspace $-workspace-5
bindsym --to-code $-key+$-key-6+shift move to workspace $-workspace-6
bindsym --to-code $-key+$-key-7+shift move to workspace $-workspace-7
bindsym --to-code $-key+$-key-8+shift move to workspace $-workspace-8
bindsym --to-code $-key+$-key-9+shift move to workspace $-workspace-9

