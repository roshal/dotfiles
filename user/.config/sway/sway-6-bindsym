
# # # https://i3wm.org/docs/userguide.html#list_of_commands

# # cat /usr/include/xkbcommon/xkbcommon-keysyms.h

bindsym --to-code $-modifier+q       kill
bindsym --to-code $-modifier+q+shift kill

##### 6.1 executing applications
# # # https://i3wm.org/docs/userguide.html#exec

bindsym $-modifier+$-special-p       exec $-grim-crop $-grim-path
bindsym $-modifier+$-special-p+ctrl  exec $-grim-view $-grim-path
bindsym $-modifier+$-special-p+shift exec $-grim-full $-grim-path

bindsym $-modifier+$-special-s exec $-grim-slurp

bindsym $-modifier+return exec termite

bindsym $-special-p       exec $-grim-crop $-grim-copy
bindsym $-special-p+ctrl  exec $-grim-view $-grim-copy
bindsym $-special-p+shift exec $-grim-full $-grim-copy

bindsym --to-code $-modifier+d exec wofi
bindsym --to-code $-modifier+l exec swaylock --image /-/pictures/waves.jpg
bindsym --to-code $-modifier+n exec thunar
bindsym --to-code $-modifier+o exec swaymsg -- output $-echo-output-focused disable \, output $-echo-output-suspend enable

##### 6.2 splitting containers
# # # https://i3wm.org/docs/userguide.html#_splitting_containers

bindsym --to-code $-modifier+shift+e split toggle

bindsym --to-code $-modifier+shift+h split horizontal
bindsym --to-code $-modifier+shift+v split vertical

##### 6.3 manipulating layout
# # # https://i3wm.org/docs/userguide.html#manipulating_layout

### does incomprehensibly
# bindsym --to-code $-modifier+d layout default

bindsym --to-code $-modifier+e layout toggle

bindsym --to-code $-modifier+s layout stacking
bindsym --to-code $-modifier+t layout tabbed

bindsym --to-code $-modifier+f fullscreen

bindsym --to-code $-modifier+f+shift floating toggle

bindsym --to-code $-modifier+h splith
bindsym --to-code $-modifier+v splitv

##### 6.4 focusing containers
# # # https://i3wm.org/docs/userguide.html#_focusing_moving_containers

bindsym $-modifier+$-arrow-u focus $-arrow-u
bindsym $-modifier+$-arrow-l focus $-arrow-l
bindsym $-modifier+$-arrow-r focus $-arrow-r
bindsym $-modifier+$-arrow-d focus $-arrow-d

bindsym $-modifier+space focus mode_toggle

bindsym --to-code $-modifier+a focus parent
bindsym --to-code $-modifier+c focus child

##### 6.5 moving containers
# # # https://i3wm.org/docs/userguide.html#_moving_containers

bindsym $-modifier+$-arrow-u+shift move $-arrow-u $-step-b
bindsym $-modifier+$-arrow-l+shift move $-arrow-l $-step-b
bindsym $-modifier+$-arrow-r+shift move $-arrow-r $-step-b
bindsym $-modifier+$-arrow-d+shift move $-arrow-d $-step-b

bindsym --to-code $-modifier+mod1+a move absolute position center
bindsym --to-code $-modifier+mod1+c move position center
bindsym --to-code $-modifier+mod1+m move position mouse

##### 6.6 swapping containers
# # # https://i3wm.org/docs/userguide.html#_swapping_containers

##### 6.7 sticky floating windows
# # # https://i3wm.org/docs/userguide.html#_sticky_floating_windows

bindsym --to-code $-modifier+shift+s sticky toggle

##### 6.8 changing workspaces or moving to workspaces
# # # https://i3wm.org/docs/userguide.html#_changing_named_workspaces_moving_to_workspaces

bindsym $-modifier+$-arrow-u+mod1 move workspace to output $-arrow-u
bindsym $-modifier+$-arrow-l+mod1 move workspace to output $-arrow-l
bindsym $-modifier+$-arrow-r+mod1 move workspace to output $-arrow-r
bindsym $-modifier+$-arrow-d+mod1 move workspace to output $-arrow-d

bindsym $-modifier+$-arrow-u+ctrl workspace prev_on_output
bindsym $-modifier+$-arrow-d+ctrl workspace next_on_output

bindsym $-modifier+$-arrow-l+ctrl workspace prev
bindsym $-modifier+$-arrow-r+ctrl workspace next

bindsym $-modifier+$-control-i workspace $-workspace-6
bindsym $-modifier+$-control-h workspace $-workspace-7
bindsym $-modifier+$-control-d workspace $-workspace-8
bindsym $-modifier+$-control-e workspace $-workspace-9

bindsym $-modifier+$-control-i+shift move to workspace $-workspace-6
bindsym $-modifier+$-control-h+shift move to workspace $-workspace-7
bindsym $-modifier+$-control-d+shift move to workspace $-workspace-8
bindsym $-modifier+$-control-e+shift move to workspace $-workspace-9

bindsym $-modifier+$-control-p workspace prev_on_output
bindsym $-modifier+$-control-n workspace next_on_output

bindsym $-modifier+$-control-p+shift move to workspace prev_on_output
bindsym $-modifier+$-control-n+shift move to workspace next_on_output

bindsym $-modifier+escape workspace --no-auto-back-and-forth $-workspace-escape

bindsym $-modifier+escape+shift move to workspace $-workspace-escape

bindsym $-modifier+tab workspace back_and_forth

bindsym $-modifier+tab+shift move to workspace back_and_forth

bindsym --to-code $-modifier+$-key-0 workspace $-workspace-0
bindsym --to-code $-modifier+$-key-1 workspace $-workspace-1
bindsym --to-code $-modifier+$-key-2 workspace $-workspace-2
bindsym --to-code $-modifier+$-key-3 workspace $-workspace-3
bindsym --to-code $-modifier+$-key-4 workspace $-workspace-4
bindsym --to-code $-modifier+$-key-5 workspace $-workspace-5
bindsym --to-code $-modifier+$-key-6 workspace $-workspace-6
bindsym --to-code $-modifier+$-key-7 workspace $-workspace-7
bindsym --to-code $-modifier+$-key-8 workspace $-workspace-8
bindsym --to-code $-modifier+$-key-9 workspace $-workspace-9

bindsym --to-code $-modifier+$-key-0+shift move to workspace $-workspace-0
bindsym --to-code $-modifier+$-key-1+shift move to workspace $-workspace-1
bindsym --to-code $-modifier+$-key-2+shift move to workspace $-workspace-2
bindsym --to-code $-modifier+$-key-3+shift move to workspace $-workspace-3
bindsym --to-code $-modifier+$-key-4+shift move to workspace $-workspace-4
bindsym --to-code $-modifier+$-key-5+shift move to workspace $-workspace-5
bindsym --to-code $-modifier+$-key-6+shift move to workspace $-workspace-6
bindsym --to-code $-modifier+$-key-7+shift move to workspace $-workspace-7
bindsym --to-code $-modifier+$-key-8+shift move to workspace $-workspace-8
bindsym --to-code $-modifier+$-key-9+shift move to workspace $-workspace-9

