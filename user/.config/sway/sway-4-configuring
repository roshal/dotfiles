for_window [instance="^chromium$"] inhibit_idle fullscreen

for_window [instance="^code-oss$"] border none

for_window [instance="^jetbrains-pycharm$" title="^win0$"] border none
for_window [instance="^jetbrains-pycharm$" title="^win0$"] floating enable

for_window [instance="^jetbrains-pycharm-ce$" title="^win0$"] border none
for_window [instance="^jetbrains-pycharm-ce$" title="^win0$"] floating enable

for_window [instance="^jetbrains-webstorm$" title="^win0$"] border none
for_window [instance="^jetbrains-webstorm$" title="^win0$"] floating enable

for_window [instance="^telegram-desktop$"] border none

