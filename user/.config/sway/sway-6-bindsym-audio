# bindsym XF86AudioRaiseVolume exec amixer set Master 1+

# bindsym XF86AudioMicMute exec amixer set Speaker toggle
# bindsym XF86AudioMute    exec amixer set Master  toggle

# bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -1db && $-pulsemixer-volume > $-path-mako-pulsemixer
# bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +1db && $-pulsemixer-volume > $-path-mako-pulsemixer

# bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SINK@ toggle
# bindsym XF86AudioMute    exec pactl set-sink-mute   @DEFAULT_SINK@ toggle

### pactl

bindsym --whole-window $-modifier+$-mouse-u+ctrl exec pactl set-sink-volume @DEFAULT_SINK@ +1db && $-pulsemixer-volume > $-path-mako-pulsemixer
bindsym --whole-window $-modifier+$-mouse-m+ctrl exec pactl set-sink-volume @DEFAULT_SINK@  0db && $-pulsemixer-volume > $-path-mako-pulsemixer
bindsym --whole-window $-modifier+$-mouse-d+ctrl exec pactl set-sink-volume @DEFAULT_SINK@ -1db && $-pulsemixer-volume > $-path-mako-pulsemixer

bindsym --whole-window $-modifier+$-mouse-u+ctrl+$-although exec pactl set-source-mute @DEFAULT_SINK@ off && $-pulsemixer-volume > $-path-mako-pulsemixer
bindsym --whole-window $-modifier+$-mouse-d+ctrl+$-although exec pactl set-source-mute @DEFAULT_SINK@ on  && $-pulsemixer-volume > $-path-mako-pulsemixer

bindsym --whole-window $-modifier+$-mouse-u+ctrl+shift exec pactl set-sink-mute @DEFAULT_SINK@ off && $-pulsemixer-volume > $-path-mako-pulsemixer
bindsym --whole-window $-modifier+$-mouse-d+ctrl+shift exec pactl set-sink-mute @DEFAULT_SINK@ on  && $-pulsemixer-volume > $-path-mako-pulsemixer

### playerctl

bindsym --to-code $-modifier+f9  exec playerctl play-pause
bindsym --to-code $-modifier+f10 exec playerctl stop
bindsym --to-code $-modifier+f11 exec playerctl previous
bindsym --to-code $-modifier+f12 exec playerctl next
