
# # https://git-scm.com/docs/git-confighttps://git-scm.com/docs/git-config

[core]

editor = code --wait

[merge]

tool = vscode

[mergetool "vscode"]

cmd = code --wait $MERGED

[diff]

tool = vscode

[difftool "vscode"]

cmd = code --wait --diff $LOCAL $REMOTE

[pager]

log = false

[rebase]

backend = apply

[status]

branch = true

short = true

[color]

advice = true
blame = true
branch = true
decorate = true
diff = true
grep = true
interactive = true
interactive = true
pager = true
pager = true
push = true
remote = true
showBranch = true
status = true
transport = true
ui = true

[alias]

### classic

co = checkout --no-guess
br = branch
ci = commit
st = status

last = log -1 @
hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
type = cat-file -t
dump = cat-file -p
echo = !echo

remove = rm --cached

unstage = reset @ --

### default

loghex = log --abbrev=8
loging = log --reverse --color --abbrev=8 --date=format:%y-%m-%d --pretty='%C(auto)%cd %h %<(8,trunc)%ce %<(53,trunc)%s%n%-d%C(reset)'

### custom

ad = add
cl = clone
di = diff
in = init
me = merge
re = remote
un = reset @ --

aa = add --all
all = add --all

bvv = branch -v --verbose

com = commit

cam = commit --allow-empty-message --no-edit --amend
cem = commit --allow-empty-message --message '' --allow-empty

amend = commit --amend

