
# # https://git-scm.com/docs/git-confighttps://git-scm.com/docs/git-config

[core]

editor = code --wait

[merge]

tool = vscode

[mergetool "vscode"]

cmd = code --wait $MERGED

[diff]

tool = vscode

[difftool "vscode"]

cmd = code --wait --diff $LOCAL $REMOTE

[pager]

# log = false

[rebase]

backend = apply

[status]

branch = true

short = true

[color]

advice = true
blame = true
branch = true
decorate = true
diff = true
grep = true
interactive = true
interactive = true
pager = true
pager = true
push = true
remote = true
showBranch = true
status = true
transport = true
ui = true

[alias]

### classic

co = checkout --no-guess
br = branch
ci = commit
st = status

last = log -1 @
hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
type = cat-file -t
dump = cat-file -p
echo = !echo

remove = rm --cached

unstage = reset @ --

### default

loghex = log --abbrev=8

# # https://git-scm.com/docs/pretty-formats
loging = log --reverse --color --abbrev=8 --date='format:%y-%m-%d %T' --pretty='%C(auto)%ad %h %<(8,trunc)%ae %<(53,trunc)%s%n%-d%C(reset)'

### custom

aa = add --all
ad = add
cl = clone
di = diff
in = init
me = merge
re = remote
un = reset @ --

bvv = branch -v --verbose

### add

all = add --all

patch = add --patch

### branch

buom = branch -u origin/master

### cat-file

dump = cat-file -p
type = cat-file -t

### checkout

ctod = checkout --track origin/dev

### commit

com = commit

cam = commit --allow-empty-message --no-edit --amend
cem = commit --allow-empty-message --allow-empty --message ''
cin = commit --allow-empty-message --no-verify

amend = commit --amend --allow-empty-message --no-edit

edit = commit --amend --allow-empty-message

# # git config --local format.signoff true
# # git config --local commit.gpgSign true
sign = commit --signoff

### config

config-roshal-mail = config user.email roshal@users.noreply.github.com
config-roshal-name = config user.name 'roshal'

config-esphere-mail = config user.email roshal.e@esphere.ru
config-esphere-name = config user.name 'Рошаль Ефим Геннадьевич'

### log

hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short

### loging

l   = loging -16
ll  = loging -32
lll = loging -64

lg = loging -32 --graph --reverse
lo = loging -32 --oneline

### merge

mes = merge --squash

### push

pg = push github HEAD
ph = push heroku HEAD
po = push origin HEAD

pgf = push --force github HEAD
phf = push --force heroku HEAD
pof = push --force origin HEAD

png = push --no-verify github HEAD
pnh = push --no-verify heroku HEAD
pno = push --no-verify origin HEAD

pfng = push --force --no-verify github HEAD
pfnh = push --force --no-verify heroku HEAD
pfno = push --force --no-verify origin HEAD

puoh = push -u github HEAD
puoh = push -u heroku HEAD
puoh = push -u origin HEAD

### remote

rev = remote --verbose

rag = remote add github
rah = remote add heroku
rao = remote add origin

rrg = remote remove github
rrh = remote remove heroku
rro = remote remove origin

rsg = remote set-url github
rsh = remote set-url heroku
rso = remote set-url origin

### reset

reh = reset HEAD^
roh = reset origin/HEAD

undo = reset --soft HEAD@{1}

### rm

rrc = rm -r --cached .

### stash

sl   = stash list
ss   = stash show
sp   = stash push
pp   = stash pop
sa   = stash apply
sc   = stash create
sd   = stash drop
pop  = stash pop
drop = stash drop
list = stash list

### show

sn = show --name-status
