
# # https://git-scm.com/docs/git-config

[core]

editor = code --wait

[include]

path = git-alias.gitconfig
path = git-color.gitconfig

### commands

[merge]

tool = vscode

[diff]

tool = vscode

[pager]

# log = false

[rebase]

backend = apply

[status]

branch = true

short = true

### tools

[mergetool "vscode"]

cmd = code --wait $MERGED

[difftool "vscode"]

cmd = code --wait --diff $LOCAL $REMOTE
