sl   = stash list
ss   = stash show
sp   = stash push
pp   = stash pop
sa   = stash apply
sc   = stash create
sd   = stash drop
pop  = stash pop
drop = stash drop
list = stash list

l   = loging -16
ll  = loging -32
lll = loging -64

lg = loging -32 --graph --reverse
lo = loging -32 --oneline

sn = show --name-status

mes = merge --squash

rev = remote --verbose
rrc = rm -r --cached .

buom = branch -u origin/master
ctod = checkout --track origin/dev
puoh = push -u origin HEAD

pgf = push github HEAD --force
phf = push heroku HEAD --force
pof = push origin HEAD --force

pgh = push github HEAD
phh = push heroku HEAD
poh = push origin HEAD

pgv = push github HEAD --no-verify
phv = push heroku HEAD --no-verify
pov = push origin HEAD --no-verify

reh = reset HEAD^

rag = remote add github
rah = remote add heroku
rao = remote add origin

rrg = remote remove github
rrh = remote remove heroku
rro = remote remove origin

