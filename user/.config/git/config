
# # https://git-scm.com/docs/git-config

[core]

editor = code --wait

[include]

path = git-alias.gitconfig
path = git-color.gitconfig

### commands

[commit]

template = /home/user/.config/git/template

[diff]

tool = vscode

[fetch]

# prune = true

[init]

defaultBranch = main

[merge]

tool = vscode

[pager]

# log = false

[rebase]

backend = apply

[remote "origin"]

prune = true

[status]

branch = true

short = true

### tools

[mergetool "vscode"]

cmd = code --wait $MERGED

[difftool "vscode"]

cmd = code --wait --diff $LOCAL $REMOTE
